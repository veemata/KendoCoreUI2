@model IEnumerable<Category>
@{
    ViewData["Title"] = "Popup AddEdit";
}

<h2>@ViewData["Title"]</h2>



<div id="modal-placeholder"></div>

<div id="notification"></div>

<p>
    <button type="button" class="btn btn-default btn-sm" data-toggle="ajax-modal" data-target="#add-category" data-url="@Url.Action("Category")">
        Add Category
    </button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <button type="button" class="btn btn-default btn-sm" data-toggle="ajax-modal"
                            data-target="#add-category"
                            data-url="@Url.Action("Category","PopupAddEdit", new { Id= item.CategoryId })">
                        Edit
                    </button>
                    <button type="button" id="@item.CategoryId" class="btn btn-danger btn-sm delete-prompt">Delete</button>


                </td>
            </tr>
        }
    </tbody>
</table>

@{
    Html.RenderPartial("_BootStrapDeleteConfirm");
}



@section Scripts
{
    <script src="~/_content/MH.PLCM.Northwind.Web/js/popUpdate.js"></script>
    <script src="~/_content/MH.PLCM.Northwind.Web/js/confirmDelete.js"></script>
}
