@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "../_Layout.cshtml";
}




<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card-group">
            <div class="card p-4">
                <div class="card-body">
                    <h2>Login</h2>
                    <p class="text-muted">Sign In to your account</p>
                    <form id="account" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="icon-envelope"></i>
                                </span>
                            </div>
                            <input asp-for="Input.Email" class="form-control" type="text" placeholder="UserName" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="input-group mb-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="icon-lock"></i>
                                </span>
                            </div>
                            <input asp-for="Input.Password" class="form-control" type="password" placeholder="Password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="input-group mb-4">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <div class="row">
                            <div class="col-6">
                                <button type="submit" class="btn btn-primary px-4">Login</button>
                            </div>
                            <div class="col-6 text-right">
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
                <div class="card-body text-center">
                    <div>
                        <h2>Wix Enginering PLCM</h2>
                        <p>Proudly developed and supported by MHFT information technologies group</p>
                        <div style="margin-top:20px">
                            <h5>For Support Contact: <br /> help@mann-hummel.com</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


